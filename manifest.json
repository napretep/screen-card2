{
    "manifest_version": 3,
    "name": "Screen.Card",
    "version": "0.1.0",
    "action": { "default_popup": "popup.html"},

    "icons": {
      "128": "static/logo.png",
      "16": "static/logo_mini.png",
      "32": "static/logo.png",
      "48": "static/logo.png"
   },
    "content_scripts": [{
        "js": [
            "src/jscode/content.js"
        ],
        "matches": [
            "http://*/*", "https://*/*"
        ]
    }],
    "background": {
        "service_worker": "src/jscode/backend.js",
        "type": "module"
    },

    "externally_connectable": {
        "matches": ["*://*.google.com/*"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "notifications",
        "storage",
        "unlimitedStorage"
    ],
    "web_accessible_resources": [{
        "matches": [
            "<all_urls>"
        ],
        "resources": [
            "**/*",
            "*"
        ],
        "use_dynamic_url": true
    }]
}